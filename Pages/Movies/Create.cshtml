@page
@model MoviesDb.Pages.Movies.CreateModel
@{
    ViewData["Title"] = "Movies - add";
}

<div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-md-6">
            <h1>Add Movie</h1>

            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Title</label>
                    <input type="text" asp-for="Movie.Title" class="form-control" />
                    <span asp-validation-for="Movie.Title" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label>Length (minutes)</label>
                    <input type="text" asp-for="Movie.Length" class="form-control" />
                    <span asp-validation-for="Movie.Length" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label>Director</label>
                    <input type="text" asp-for="Movie.Director" class="form-control" />
                    <span asp-validation-for="Movie.Director" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label>Genre</label>
                    <select asp-for="Movie.Genre" class="form-control">
                        <option>Comedy</option>
                        <option>History</option>
                        <option>Sci-fi</option>
                        <option>Romance</option>
                        <option>Thriller</option>
                        <option>Action</option>
                        <option>Horror</option>
                        <option>Fantasy</option>
                        <option>Drama</option>
                    </select>
                    <span asp-validation-for="@Model.Movie.Genre" class="text-danger" ></span>
                </div>
                <div class="form-group">
                    <label>Movie image</label>
                    <input type="file" name="postedFiles" class="form-control" />
                </div>
                <div class="text-center my-3">
                    <input type="submit" class="btn btn-primary" value="Save" />
                </div>
            </form>
        </div>
    </div>
</div>
